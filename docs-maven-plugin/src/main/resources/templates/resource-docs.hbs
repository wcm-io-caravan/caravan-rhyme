{{#partial "title" ~}}
HAL API documentation for {{title}}
{{~/partial}}

{{#partial "content" }}
<h1>{{title}} <span class="text-muted">HAL API docs</span></h1>
<p class="lead">{{{description}}}</p>

<section>
   <h2 class="text-muted"> Resource State</h3>
   
{{#if properties}}
<table class="table table-striped table-sm ">
      <thead>
        <tr class="text-muted">
          <th scope="col">JSON Pointer</th>
          <th scope="col">Description</th>
          <th scope="col">Type</th>
        </tr>
      </thead>
      <tbody>
{{#each properties}}
        <tr>
          <th scope="row">{{jsonPointer}}</th>
          <td>{{{description}}}</td>
          <td>{{type}}</td>
        </tr>
{{/each}}
      </tbody>
    </table>
{{else}}
 <p class="text-muted">this interface doesn't define any resource state properties</p>
{{/if}}
  
</section>

<section>
  <h2 class="text-muted">Link Relations </h3>

 {{#each relations}}
  <section class="border-top pt-2" id="{{relation}}">
    <h3>
      {{relation}}  
      <small class="text-muted">
        <span class="badge rounded-pill bg-secondary">{{cardinality}}</span>
        links to <a href="{{relatedResourceHref}}">{{relatedResourceTitle}}</a>
      </small>
    </h3>
    <p>{{description}}</p>
    
 {{#if variables}}
    <table class="table table-striped table-sm ">
      <thead>
        <tr class="text-muted">
          <th scope="col">Variable</th>
          <th scope="col">Description</th>
          <th scope="col">Type</th>
        </tr>
      </thead>
      <tbody>
 {{#each variables}}
        <tr>
          <th scope="row">{{name}}</th>
          <td>{{{description}}}</td>
          <td>{{type}}</td>
        </tr>
 {{/each}}
      </tbody>
    </table>
 {{/if}}
    </section>
  {{/each}}
  </section>


{{/partial}}

{{> templates/base-template}}